{% extends 'base.html.twig' %}
{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('course_create') }}" method="POST">
                <fieldset>
                    <legend>Нов курс</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="course_title">Курс</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="course_title" placeholder="Заглавие на пост"
                                   name="course[title]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="course_content">Съдържание</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="course_content"
                                  name="course[content]"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="post_image">Качи снимка</label>
                        <div class="col-sm-4 ">
                            <input accept=".jpg, .png" type="file" class="" id="post_image" placeholder="Качи снимка"
                                   name="course[image]">
                        </div>
                    </div>

                                        {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('blog_index') }}">Отказ</a>
                            <button type="submit" class="btn btn-primary">Запази</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}